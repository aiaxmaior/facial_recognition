{
    "device_id": "jetson-001",
    "broker_url": "https://acetaxi-bridge.qryde.net/iot-broker/api",
    "api_key": null,
    "camera": {
        "rtsp_url": "rtsp://admin:Fanatec2025@192.168.13.119/Preview_01_sub",
        "fps": 25
    },
    "pipeline": {
        "mode": "deepstream",
        "deepstream": {
            "latency_ms": 50,
            "drop_on_latency": true,
            "output_width": 640,
            "output_height": 360,
            "output_format": "BGRx"
        },
        "fallback_mode": "opencv"
    },
    "detection": {
        "engine_path": "models/yolov8_face/yolov8n-face.engine",
        "input_size": 640,
        "conf_threshold": 0.5,
        "nms_threshold": 0.45
    },
    "recognition": {
        "model": "ArcFace",
        "detector_backend": "yolov8n",
        "distance_threshold": 0.55,
        "min_face_size": 40,
        "process_fps": 1,
        "process_width": 640
    },
    "validation": {
        "confirmation_frames": 3,
        "consistency_threshold": 0.6,
        "cooldown_seconds":2
    },
    "video_buffer": {
        "enabled": false,
        "duration_seconds": 15,
        "buffer_path": "/tmp/video_buffer",
        "pre_event_seconds": 10,
        "post_event_seconds": 5
    },
    "sync": {
        "enrollment_db_path": "data/enrollments.db"
    },
    "heartbeat": {
        "interval_seconds": 30
    },
    "health_check": {
        "auto_remediate": true,
        "thresholds": {
            "cpu_warn_percent": 85,
            "cpu_crit_percent": 95,
            "memory_warn_percent": 85,
            "memory_crit_percent": 95,
            "disk_warn_percent": 85,
            "disk_crit_percent": 95,
            "temp_warn_c": 75,
            "temp_crit_c": 85
        }
    }
}
